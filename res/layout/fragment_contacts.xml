<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.contacts"
    tools:layout_editor_absoluteX="-16dp"
    tools:layout_editor_absoluteY="-238dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/darkgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.334">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="389dp"
            android:layout_height="281dp"
            android:orientation="vertical"
            android:padding="16dp"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="43dp">

            <TextView
                android:id="@+id/emailUs"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="Email Us"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.343"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText,RtlHardcoded,UseCompatTextViewDrawableXml" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="248dp"
                android:layout_height="42dp"
                android:text="Send us an Email. We will get back  to you"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.196"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <TextView
                android:id="@+id/contactus"
                android:layout_width="363dp"
                android:layout_height="78dp"
                android:drawableLeft="@drawable/baseline_call_24"
                android:drawablePadding="8dp"
                android:text="Contact us"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/bugreport"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailUs"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded,UseCompatTextViewDrawableXml" />

            <TextView
                android:id="@+id/bugreport"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:drawablePadding="8dp"
                android:text="Report A Bug"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/baseline_bug_report_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.95"
                tools:ignore="HardcodedText,MissingConstraints"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="248dp"
                android:layout_height="42dp"
                android:text="Available only on works days by 5.00 pm to 12.00 pm"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.569"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="248dp"
                android:layout_height="42dp"
                android:text="Error happen and doesn't know the solution click here"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.933"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <!-- Add similar TextViews for "Contact Us" and "Report a Bug" -->

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textColor="@color/orange"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>

